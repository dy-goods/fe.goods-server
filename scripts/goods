server {
    listen 80 default;
    return 403;
}
server {
    listen 443 ssl; # managed by Certbot
    server_name www.53zi.com; # 配置域名

    access_log /srv/goods-server/logs/nginx/access_log;
    error_log  /srv/goods-server/logs/nginx/error_log;

    # 处理静态文件/favicon.ico:
    location /favicon.ico {
        root /srv/goods-server/src/client/assets;
    }

    # 处理静态资源:
    location ~ ^\/statics\/.*$ {
        root /srv/goods-server;
    }

    # 动态请求转发到9090端口(gunicorn):
    location / {
        proxy_pass       http://127.0.0.1:9090;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    ssl_certificate /etc/letsencrypt/live/www.53zi.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.53zi.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = www.53zi.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
}