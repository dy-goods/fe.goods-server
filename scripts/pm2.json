{
  "apps" : [{
    "name"               : "fe.seed",
    "script"             : "dist/server/index.js",
    "env": {
      "COMMON_VARIABLE": "true",
      "BABEL_DISABLE_CACHE": 1,
      "NODE_ENV": "production"
    },
    "exec_interpreter"   : "node",
    "node_args"          : "--harmony",
    "exec_mode"          : "cluster_mode",
    "instances"          : 0,
    "log_date_format"    : "YYYY-MM-DD HH:mm Z",
    "max_memory_restart" : "700M",
    "merge_logs"         : true,
    "error_file"         : "/var/goods-server/logs/pm2/error.log",
    "out_file"           : "/var/goods-server/logs/pm2/out.log",
    "pid_file"           : "/var/goods-server/logs/pm2/goods.pid",
    "watch"              : false
  }]
}
