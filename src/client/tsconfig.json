{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ES5",
    "lib": ["dom", "es7", "scripthost", "es2015.promise"],
    "typeRoots": ["../**/*", "../../node_modules/@types/"]
  },
  "exclude": ["./assets/"]
}
